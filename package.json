{
  "name": "intent-bound-secure-chat",
  "version": "2.0.0",
  "description": "Production-ready secure 1-to-1 messaging with Double Ratchet E2EE",
  "scripts": {
    "dev": "concurrently \"npm run ws:dev\" \"npm run next:dev\"",
    "next:dev": "tsx server.ts",
    "ws:dev": "tsx ws-server.ts",
    "ws:start": "NODE_ENV=production tsx ws-server.ts",
    "build": "next build",
    "start": "concurrently \"npm run ws:start\" \"NODE_ENV=production tsx server.ts\"",
    "lint": "next lint"
  },
  "dependencies": {
    "idb": "^8.0.0",
    "next": "^15.0.0",
    "qrcode": "^1.5.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "ws": "^8.16.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/ws": "^8.5.10",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-next": "^15.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "nextjs",
    "websocket",
    "e2ee",
    "double-ratchet",
    "secure-chat"
  ],
  "author": "",
  "license": "MIT"
}
